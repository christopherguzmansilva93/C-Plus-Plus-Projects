//Implementing Numerical Integration 

#include <iostream>
using namespace std; 

//FUNC represents the function pointer
typedef double (*FUNC)(double);

double integrate(FUNC f, double a, double b){//function definition
    double sum = 0, x = 0.0001;
    for(double i=a; i < b; i += x) sum += f(i) * x; //going form a to b
	//adding the areas
    return sum;
}

//different functions
double line(double x){ 
    return x;
}
double square(double x){ 
    return x*x;
}
double cube(double x){ 
    return x*x*x;
}

//main driver code
int main() 
{
    cout << "The integral of f(x)=x between 1 and 5 is: " << integrate(line, 1, 5) << endl; 
    cout << "The integral of f(x)=x^2 between 1 and 5 is: " << integrate(square, 1, 5) << endl;
    cout << "The integral of f(x)=x^3 between 1 and 5 is: " << integrate(cube, 1, 5) << endl;
    return 0;
}
